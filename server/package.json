{
  "name": "word-book-app",
  "version": "1.0.0",
  "description": "This app is for non native speakers to improve their vocabulary and help to improve their speech making it more literate and various",
  "main": "./index.ts",
  "scripts": {
    "test": "jest --watchAll --detectOpenHandles",
    "start:dev": "nodemon",
    "start": "tsc && node server/build/index.js",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "lint": "eslint . --ext .ts",
    "lint-and-fix": "eslint . --ext .ts --fix"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "setupFiles": [
      "<rootDir>/src/__tests__/setup.ts"
    ],
    "testMatch": [
      "**/**/*.spec.ts"
    ],
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "resetMocks": true,
    "restoreMocks": true
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/ekateryna-rodina/wordbook.git"
  },
  "keywords": [
    "vacabulary",
    "words",
    "literate",
    "speech",
    "skills",
    "memoization"
  ],
  "author": "Kateryna Rodina",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ekateryna-rodina/wordbook/issues"
  },
  "homepage": "https://github.com/ekateryna-rodina/wordbook#readme",
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/body-parser": "^1.19.1",
    "@types/config": "0.0.40",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.2",
    "@types/jsonwebtoken": "^8.5.5",
    "@types/lodash": "^4.14.176",
    "@types/nanoid": "^3.0.0",
    "@types/node": "^16.11.7",
    "@types/pino": "^6.3.12",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.3.1",
    "@typescript-eslint/parser": "^5.3.1",
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "jest": "^27.3.1",
    "mongodb-memory-server": "^8.0.2",
    "nodemon": "^2.0.15",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.7",
    "ts-node": "^10.4.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "cookie-parser": "^1.4.6",
    "cookies": "^0.8.0",
    "dayjs": "^1.10.7",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.0.12",
    "nanoid": "^3.1.30",
    "pino": "^7.2.0",
    "pino-pretty": "^7.2.0",
    "zod": "^3.11.6"
  }
}
